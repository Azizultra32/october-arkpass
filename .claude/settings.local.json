{
  "permissions": {
    "allow": [
      "Bash(done)",
      "Bash(echo:*)",
      "Bash(awk:*)",
      "Bash(expr:*)",
      "Bash(npm create:*)",
      "Bash(npm install)",
      "Bash(npm install:*)",
      "Bash(npx tailwindcss init -p)",
      "Bash(npm run dev:*)",
      "Bash(supabase link:*)",
      "Bash(supabase db dump:*)",
      "Bash(supabase db remote exec:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)"
    ],
    "deny": [],
    "ask": []
  },
  "autoApproveTools": true,
  "autoExecute": true,
  "skipConfirmations": true,
  "automation": {
    "enabled": true,
    "mode": "full",
    "requireConfirmation": false,
    "tools": {
      "bash": {
        "autoApprove": true
      },
      "write": {
        "autoApprove": true
      },
      "edit": {
        "autoApprove": true
      },
      "read": {
        "autoApprove": true
      }
    }
  }
}
